{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "OpenSW",
  "mainBinaryName": "OpenSW",
  "version": "0.1.0",
  "identifier": "dev.liebe-magi.opensw",
  "plugins": {},
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "OpenSW",
        "width": 500,
        "height": 750,
        "useHttpsScheme": true
      },
      {
        "label": "compact",
        "title": "Recording",
        "width": 400,
        "height": 80,
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": true,
        "visible": false,
        "useHttpsScheme": true,
        "url": "/compact"
      }
    ]
  }
}
