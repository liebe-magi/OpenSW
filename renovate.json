{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    "group:allNonMajor",
    "helpers:pinGitHubActionDigests"
  ],
  "timezone": "Asia/Tokyo",
  "rebaseWhen": "behind-base-branch",
  "labels": ["dependencies"],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on sunday"]
  },
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true
  },
  "packageRules": [
    {
      "description": "Auto-merge GitHub Actions patch/minor/digest updates",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["patch", "minor", "digest"],
      "automerge": true,
      "automergeType": "pr",
      "labels": ["dependencies", "github-actions"]
    },
    {
      "description": "Auto-merge Cargo patch updates",
      "matchManagers": ["cargo"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr",
      "labels": ["dependencies", "cargo", "automerge-safe"]
    },
    {
      "description": "Auto-merge minor updates for linting/formatting tools",
      "matchPackageNames": ["eslint", "prettier"],
      "matchPackagePatterns": ["^@typescript-eslint/"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Group Tauri packages together",
      "matchPackagePatterns": ["^@tauri-apps/", "^tauri-"],
      "groupName": "Tauri packages"
    },
    {
      "description": "Group React packages together",
      "matchPackagePatterns": ["^react", "^@types/react"],
      "groupName": "React packages"
    },
    {
      "description": "Group TypeScript and ESLint packages together",
      "matchPackagePatterns": ["typescript", "eslint", "^@typescript-eslint/"],
      "groupName": "TypeScript and ESLint"
    },
    {
      "description": "Group Rust audio crates together",
      "matchManagers": ["cargo"],
      "matchPackageNames": ["cpal", "hound", "rodio", "rubato"],
      "groupName": "Rust audio crates"
    },
    {
      "description": "Require review for Cargo minor updates",
      "matchManagers": ["cargo"],
      "matchUpdateTypes": ["minor"],
      "automerge": false,
      "labels": ["dependencies", "cargo", "review-required"]
    },
    {
      "description": "Prioritize Cargo major updates",
      "matchManagers": ["cargo"],
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "cargo", "major"],
      "prPriority": 1
    },
    {
      "description": "Handle whisper-rs carefully (has native dependencies)",
      "matchManagers": ["cargo"],
      "matchPackageNames": ["whisper-rs"],
      "automerge": false,
      "labels": ["dependencies", "cargo", "native"]
    },
    {
      "description": "Auto-merge pre-commit hook updates",
      "matchManagers": ["pre-commit"],
      "automerge": true,
      "automergeType": "pr",
      "labels": ["dependencies", "pre-commit"]
    }
  ],
  "schedule": ["after 10pm and before 6am every weekday", "every weekend"]
}
