{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":timezone(Asia/Tokyo)",
    ":prHourlyLimitNone",
    ":prConcurrentLimit10",
    "group:recommended"
  ],
  "labels": ["dependencies"],
  "automerge": false,
  "platformAutomerge": true,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on monday"]
  },
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true
  },
  "packageRules": [
    {
      "description": "Auto-merge patch updates for dev dependencies",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "description": "Auto-merge minor updates for linting/formatting tools",
      "matchPackageNames": ["eslint", "prettier", "@typescript-eslint/**"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Group Tauri packages together",
      "matchPackagePatterns": ["^@tauri-apps/", "^tauri-"],
      "groupName": "Tauri packages"
    },
    {
      "description": "Group React packages together",
      "matchPackagePatterns": ["^react", "^@types/react"],
      "groupName": "React packages"
    },
    {
      "description": "Group TypeScript and ESLint packages together",
      "matchPackagePatterns": ["typescript", "eslint", "@typescript-eslint/**"],
      "groupName": "TypeScript and ESLint"
    },
    {
      "description": "Group Rust audio crates together",
      "matchManagers": ["cargo"],
      "matchPackageNames": ["cpal", "hound", "rodio", "rubato"],
      "groupName": "Rust audio crates"
    },
    {
      "description": "Group Rust Tauri plugins together",
      "matchManagers": ["cargo"],
      "matchPackagePatterns": ["^tauri"],
      "groupName": "Tauri Rust packages"
    },
    {
      "description": "Handle whisper-rs carefully (has native dependencies)",
      "matchManagers": ["cargo"],
      "matchPackageNames": ["whisper-rs"],
      "automerge": false,
      "labels": ["dependencies", "native"]
    },
    {
      "description": "Group serde crates together",
      "matchManagers": ["cargo"],
      "matchPackagePatterns": ["^serde"],
      "groupName": "Serde crates"
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "automerge": true
    },
    {
      "description": "Group pre-commit hook updates",
      "matchManagers": ["pre-commit"],
      "groupName": "pre-commit hooks",
      "automerge": true
    }
  ],
  "schedule": ["after 10pm and before 6am every weekday", "every weekend"]
}
